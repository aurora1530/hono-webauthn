{
  "name": "hono-webauthn",
  "type": "module",
  "engines": {
    "node": ">=22.14.x"
  },
  "scripts": {
    "build": "npm-run-all build:db build:server build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:db": "prisma generate",
    "build:client": "node scripts/bundler.js",
    "deploy:migrate": "prisma migrate deploy",
    "watch:client": "node scripts/bundler.js --watch",
    "dev": "npm-run-all --parallel watch:client dev:server",
    "dev:server": "dotenvx run -f .env -- tsx watch --tsconfig tsconfig.server.json src/index.tsx",
    "update:aaguid": "tsx scripts/aaguid/update.ts && ./scripts/aaguid/commit.sh",
    "biome:check": "biome lint .",
    "biome:format": "biome format --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@hono/node-server": "^1.19.6",
    "@prisma/client": "^6.4.1",
    "@simplewebauthn/server": "^13.1.1",
    "glob": "^11.0.3",
    "hono": "^4.7.4",
    "redis": "^5.9.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/node": "^20.11.17",
    "esbuild": "0.25.12",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,css}": "biome check --write --no-errors-on-unmatched"
  }
}
