generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id      String    @id @default(cuid())
  name    String    @unique
  Passkey Passkey[]
  prfCiphertexts PrfCiphertext[]
}

model Passkey {
  id               String           @id
  publicKey        Bytes
  userID           String
  user             User             @relation(fields: [userID], references: [id])
  webauthnUserID   String
  counter          Int
  deviceType       String           @db.VarChar(32)
  backedUp         Boolean
  transports       String[]         @default([])
  aaguid           String           @db.VarChar(36)
  createdAt        DateTime         @default(now())
  name             String
  createdBrowser   String
  createdOS        String
  passkeyHistories PasskeyHistory[]
  prfCiphertexts   PrfCiphertext[]

  @@index([webauthnUserID], name: "webauthnUserID")
}

model PasskeyHistory {
  id        String  @id @default(cuid())
  passkeyID String
  passkey   Passkey @relation(fields: [passkeyID], references: [id])
  usedBrowser String
  usedOS      String
  usedAt     DateTime @default(now())
  type       PasskeyHistoryType @default(LOGIN)

  @@index([passkeyID, usedAt(sort: Desc)])
}

enum PasskeyHistoryType {
  LOGIN
  REAUTH
  TEST
  PRF
}

model PrfCiphertext {
  id             String   @id @default(cuid())
  userID         String
  user           User     @relation(fields: [userID], references: [id], onDelete: Cascade)
  passkeyID      String
  passkey        Passkey  @relation(fields: [passkeyID], references: [id], onDelete: Restrict)
  label          String?  @db.VarChar(120)
  ciphertext     String
  iv             String   @db.VarChar(64)
  tag            String   @db.VarChar(64)
  associatedData String?
  prfInput       String   @db.VarChar(128)
  version        Int      @default(1)
  createdAt      DateTime @default(now())

  @@index([userID])
  @@index([passkeyID])
}
