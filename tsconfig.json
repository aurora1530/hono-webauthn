{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@feature/*": ["src/features/*"],
      "@ui/*": ["src/shared/ui/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/client/**/*", "src/features/*/client/**/*"]
}
